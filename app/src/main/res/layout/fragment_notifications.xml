<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.NotificationsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/christmas"
                android:layout_width="@dimen/notf_Img_width"
                android:layout_height="@dimen/notf_Img_height"
                android:layout_weight="1"
                tools:src="@drawable/christmas" />

            <LinearLayout
                android:layout_width="@dimen/notif_dets"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/notf2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/christmas"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/notf2_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4sp"
                    android:text="@string/christmas_det"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/notf2_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/date2"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/welcome"
                android:layout_width="@dimen/notf_Img_width"
                android:layout_height="@dimen/notf_Img_height"
                android:layout_weight="1"
                tools:src="@drawable/welcome" />

            <LinearLayout
                android:layout_width="@dimen/notif_dets"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/notf1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/notf1_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4sp"
                    android:text="@string/welcome_det"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/notf1_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/date1"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>